<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" styleClass="main-menu" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.battlejack.MainMenuController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="1200.0" spacing="20">
          <Text styleClass="title-text" text="BattleJack" />
          <Button fx:id="startGameButton" onAction="#startGame" prefHeight="25.0" prefWidth="150.0" styleClass="menu-button" text="Start Game" />
         <Button fx:id="shop" onAction="#shop" prefHeight="25.0" prefWidth="150.0" styleClass="menu-button" text="Shop" />
          <Button fx:id="exitButton" onAction="#exitGame" prefHeight="25.0" prefWidth="150.0" styleClass="menu-button" text="Exit" />
      </VBox>
   </children>
</AnchorPane>
